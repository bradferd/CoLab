<a href="/user/all">Back to all users</a>

<h2>{{user.username}}</h2>

<a href="/user/{{user._id}}/edit">Edit User</a>

<form action="/user/{{user._id}}?_method=DELETE" method="post">
    <input type="submit" value="Delete User">
</form>

<h3>Projects</h3>

<ul>
    {{#each project}}
        <li>{{name}}</li>
        <li>{{description}}</li>
    {{/each}}
</ul>

<a href="{{user._id}}/projects/new">Add New Project</a>