<div class="jumbotron text-center">
    <h1 class="display-1">{{task.name}}</h1>
    <div class="row justify-content-center">
        <button class="btn-sm btn-warning mr-5" href="{{task._id}}/edit">Edit Task</button>
        <button type="button" class="btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal">
            Delete Task
        </button>

        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this task?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <form action="{{task._id}}?_method=DELETE" method="post">
                            <input class="btn btn-danger" type="submit" value="Delete Task">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>
<div class="container">
    <div class="row">
        <p>{{task.description}}</p>
    </div>
</div>