<div class="jumbotron text-center">
    <h2 class="display-4">{{project.name}}</h2>
    <div class="container">
    <div class="row justify-content-center">
        <a class="btn btn-warning" href="/user/{{project.userId}}/projects/{{project._id}}/edit">Edit Project</a>

        <form action="/user/{{project.userId}}/projects/{{project._id}}?_method=DELETE" method="post">
            <input class="btn btn-danger ml-5" type="submit" value="Delete Project">
        </form>
    </div>
</div>
</div>
<div class="container text-center">
    <h3>Looking for help with:</h3>
</div>
<div class="container mt-5">
    <div class="row mb-5">
        {{#each tasks}}
            <div class="col-sm-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{description}}</p>
                        <a class="btn btn-success" href="{{_id}}/edit">Check out this task</a>
                    </div>
                </div>
            </div>    
        {{/each}}
    </div>
    <a class="btn btn-primary"
        href="/user/{{project.userId}}/projects/{{project._id}}/tasks/new">+ New Tasks</a>
</div>
