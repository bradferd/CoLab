<div class="jumbotron text-center">
    <h2 class="display-4">{{project.name}}</h2>
    <div class="container">
    <div class="row justify-content-center">
        <a href="/user/{{project.userId}}/projects/{{project._id}}/edit">
            <button class="btn-sm btn-warning" href="">Edit Project</button>
        </a>

        <form action="/user/{{project.userId}}/projects/{{project._id}}?_method=DELETE" method="post">
            <input class="btn-sm btn-danger ml-5" type="submit" value="Delete Project">
        </form>
    </div>
</div>
</div>
<div class="container text-center">
    <h3>Looking for help with:</h3>
</div>
<div class="container mt-5">
    <div class="row mb-5">
        {{#each tasks}}
            <div class="col-sm-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{shortDesc}}</p>
                        <button 
                            href="{{projectId}}/tasks/{{_id}}"
                            class="btn btn-success" 
                            data-toggle="modal" 
                            data-target="#exampleModal"
                        >Check out this task</button></a>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="taskModal" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{name}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{description}}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a href="{{projectId}}/tasks/{{_id}}" class="btn btn-primary">Task Page</a>
                </div>
                </div>
            </div>
            </div>    
        {{/each}}
    </div>
    <a class="btn btn-primary"
        href="/user/{{project.userId}}/projects/{{project._id}}/tasks/new">
        <i class="material-icons">library_add</i>
    </a>
</div>
